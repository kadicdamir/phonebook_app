<% include partials/header %>
    <div class ="container">
        <div class="row">
            <h1><%= entry[0] %></h1>
            <h1 style ="text-align:center;">Edit <%= entry.name %> </h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/phonebook/<%=entry._id %>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="entry[name]" value = "<%=entry.name%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="entry[number]" value="<%=entry.number%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="entry[email]" value= "<%=entry.email%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/phonebook">Go Back</a>
            </div>    
        </div>
    </div>
<% include partials/footer %>